{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SoniaCapabilitiesRecord",
  "type": "object",
  "required": [
    "id",
    "phase",
    "capability",
    "difficulty",
    "turn_type",
    "messages",
    "quality",
    "metadata",
    "split",
    "content_hash"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "phase": {
      "type": "string"
    },
    "capability": {
      "type": "string"
    },
    "difficulty": {
      "type": "string",
      "enum": [
        "easy",
        "medium",
        "hard"
      ]
    },
    "turn_type": {
      "type": "string",
      "enum": [
        "single",
        "multi"
      ]
    },
    "messages": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user",
              "assistant"
            ]
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "tool_trace": {
      "type": "array"
    },
    "quality": {
      "type": "object"
    },
    "metadata": {
      "type": "object"
    },
    "split": {
      "type": "string",
      "enum": [
        "train",
        "val",
        "test"
      ]
    },
    "content_hash": {
      "type": "string"
    }
  }
}