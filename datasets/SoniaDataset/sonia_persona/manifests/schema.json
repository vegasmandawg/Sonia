{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SoniaDensePersonaRecord",
  "type": "object",
  "required": [
    "id",
    "phase",
    "category",
    "system",
    "instruction",
    "input",
    "output",
    "messages",
    "metadata",
    "split",
    "content_hash"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "phase": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "system": {
      "type": "string"
    },
    "instruction": {
      "type": "string"
    },
    "input": {
      "type": "string"
    },
    "output": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object"
    },
    "split": {
      "type": "string",
      "enum": [
        "train",
        "val",
        "test"
      ]
    },
    "content_hash": {
      "type": "string"
    }
  }
}